#include <stdio.h>

int main() {
    const int NUM_EMPRESAS = 5;
    const int PRESUPUESTO_MINIMO = 100;
    float presupuesto, cotizacion1, cotizacion2, cotizacion3, cotizacion4, cotizacion5;
    float cotizacionMenor, cotizacionMayor, sumaTotal, promedio;

    printf("Ingrese el presupuesto para la construccion de la carretera: ");
    scanf("%f", &presupuesto);

    while (presupuesto < PRESUPUESTO_MINIMO) {
        printf("El presupuesto debe ser mayor o igual a %d. Ingrese de nuevo: ", PRESUPUESTO_MINIMO);
        scanf("%f", &presupuesto);
    }

    printf("Ingrese la primera cotizacion (minimo %d): ", PRESUPUESTO_MINIMO);
    scanf("%f", &cotizacion1);
    while (cotizacion1 < PRESUPUESTO_MINIMO) {
        printf("La cotizacion debe ser mayor o igual a %d. Ingrese de nuevo: ", PRESUPUESTO_MINIMO);
        scanf("%f", &cotizacion1);
    }

    printf("Ingrese la segunda cotizacion (minimo %d): ", PRESUPUESTO_MINIMO);
    scanf("%f", &cotizacion2);
    while (cotizacion2 < PRESUPUESTO_MINIMO) {
        printf("La cotizacion debe ser mayor o igual a %d. Ingrese de nuevo: ", PRESUPUESTO_MINIMO);
        scanf("%f", &cotizacion2);
    }

    printf("Ingrese la tercera cotizacion (minimo %d): ", PRESUPUESTO_MINIMO);
    scanf("%f", &cotizacion3);
    while (cotizacion3 < PRESUPUESTO_MINIMO) {
        printf("La cotizacion debe ser mayor o igual a %d. Ingrese de nuevo: ", PRESUPUESTO_MINIMO);
        scanf("%f", &cotizacion3);
    }

    printf("Ingrese la cuarta cotizacion (minimo %d): ", PRESUPUESTO_MINIMO);
    scanf("%f", &cotizacion4);
    while (cotizacion4 < PRESUPUESTO_MINIMO) {
        printf("La cotizacion debe ser mayor o igual a %d. Ingrese de nuevo: ", PRESUPUESTO_MINIMO);
        scanf("%f", &cotizacion4);
    }

    printf("Ingrese la quinta cotizacion (minimo %d): ", PRESUPUESTO_MINIMO);
    scanf("%f", &cotizacion5);
    while (cotizacion5 < PRESUPUESTO_MINIMO) {
        printf("La cotizacion debe ser mayor o igual a %d. Ingrese de nuevo: ", PRESUPUESTO_MINIMO);
        scanf("%f", &cotizacion5);
    }

    cotizacionMenor = cotizacion1;
    cotizacionMayor = cotizacion1;

    if (cotizacion2 < cotizacionMenor) {
        cotizacionMenor = cotizacion2;
    }
    if (cotizacion2 > cotizacionMayor) {
        cotizacionMayor = cotizacion2;
    }

    if (cotizacion3 < cotizacionMenor) {
        cotizacionMenor = cotizacion3;
    }
    if (cotizacion3 > cotizacionMayor) {
        cotizacionMayor = cotizacion3;
    }

    if (cotizacion4 < cotizacionMenor) {
        cotizacionMenor = cotizacion4;
    }
    if (cotizacion4 > cotizacionMayor) {
        cotizacionMayor = cotizacion4;
    }

    if (cotizacion5 < cotizacionMenor) {
        cotizacionMenor = cotizacion5;
    }
    if (cotizacion5 > cotizacionMayor) {
        cotizacionMayor = cotizacion5;
    }

    printf("Se descarta la cotizacion más baja: %.2f\n", cotizacionMenor);
    printf("Se descarta la cotizacion más alta: %.2f\n", cotizacionMayor);

    sumaTotal = cotizacion1 + cotizacion2 + cotizacion3 + cotizacion4 + cotizacion5;
    promedio = (sumaTotal - cotizacionMenor - cotizacionMayor) / (NUM_EMPRESAS - 2);

    printf("El promedio de las cotizaciones restantes es: %.2f\n", promedio);

    return 0;
}
